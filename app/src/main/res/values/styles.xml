<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="@android:style/Theme.Holo.Light.NoActionBar">
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowBackground">@color/app_bg</item>
        <item name="android:textColor">#e5d4ac</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#433530</item>
    </style>


    <style name="BeigeText">
        <item name="android:textColor">#e5d4ac</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="DarkText">
        <item name="android:textColor">#1d0b04</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>


</resources>
